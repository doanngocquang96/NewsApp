<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CateFrag.Cate1Frag">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        style="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/toolbar_daxem">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_tintucnoibat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tin tức đã xem"
                android:textColor="@color/myColor"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/recyclerView_tinDaXem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_daxem"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="2dp"
        android:fitsSystemWindows="true"
        android:padding="2dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_daxem"
        android:id="@+id/khongco"
        android:text="Không có gì cả"
        android:textSize="18sp"
        android:gravity="center"
        android:visibility="visible"/>


</RelativeLayout>