<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HotNewsFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/catetab_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:tabTextColor="#618C8F"
        app:tabSelectedTextColor="@color/myColor"
        app:tabIndicatorColor="@color/myColor"
        app:tabIndicatorHeight="3.5dp"

        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/CateViewPager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/catetab_layout" />
</RelativeLayout>